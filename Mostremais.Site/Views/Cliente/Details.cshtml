@model Mostremais.Site.Models.ClienteViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes</h2>

@if (Model != null)
{
    <div>
        <h4>ClienteViewModel</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.ClienteId }) |
        @Html.ActionLink("Back to List", "Index")
    </p> 
}else{
    <div>
        <p>Nenhum cliente até o momento</p>
        @Html.ActionLink("Voltar", "Index", null, null, new { @class = "btn btn-primary" })
    </div>
}